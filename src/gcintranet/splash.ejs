<%# **
 * This is all of the html to be included in the body.
 * @param? nameEng The English name of your web asset.
 * @param? nameFra The French name of your web asset.
 * @param indexEng The English index of the asset.
 * @param indexFra The French index of the asset.
 * @param termsEng The English Terms and conditions of use.
 * @param termsFra The French Terms and conditions of use.
 * @param? jqueryEnv Used to determine location of jQuery files (local / external).
 * @param? cdnEnv Used to switch between qat, nonprod, and prod CDN implementations.
 * @param? sriEnabled boolean - Set to true to enable rendering of SRI hashes for CDTS sub resources.
-%>
<%_
    //Determine whether English or French should take precedence in the bilingual splash page
    if (pr.languagePrecedence == null || pr.languagePrecedence == "English") {
        var displayedValues = {
            textLeft: pr.nameEng,
            textRight: pr.nameFra,
            textLeftInv: "Government of Canada",
            textRightInv: "Gouvernement du Canada",
            termsLinkLeft: pr.termsEng,
            termsLinkRight: pr.termsFra,
            termsTextLeft: "Terms &amp; conditions",
            termsTextRight: "Avis",
            btnTextLeft: "English",
            btnTextRight: "Français",
            btnLinkLeft: pr.indexEng,
            btnLinkRight: pr.indexFra,
            canadaSVG: "sig-blk-en.svg"
        }
    } else if (pr.languagePrecedence == "French") {
        var displayedValues = {
            textLeft: pr.nameFra,
            textRight: pr.nameEng,
            textLeftInv: "Gouvernement du Canada",
            textRightInv: "Government of Canada",
            termsTextLeft: "Avis",
            termsTextRight: "Terms &amp; conditions",
            termsLinkLeft: pr.termsFra,
            termsLinkRight: pr.termsEng,
            btnTextLeft: "Français",
            btnTextRight: "English",
            btnLinkLeft: pr.indexFra,
            btnLinkRight: pr.indexEng,
            canadaSVG: "sig-blk-fr.svg"
        }
    }
-%>
<div id="bg">
    <img src="<%- wet.builder.environment(pr.cdnEnv) %>wet-boew/img/splash/sp-bg-2.jpg" alt="">
</div>
<main role="main">
    <div class="sp-hb">
        <div class="sp-bx col-xs-12">
            <h1 property="name" class="wb-inv">GC Intranet / Intranet du GC</h1>
            <div class="row">
                <div class="col-xs-11 col-md-8">
                    <img src="<%- wet.builder.environment(pr.cdnEnv) %>wet-boew/assets/<%- displayedValues.canadaSVG %>" alt="Government of Canada" property="logo" width="283">
                    <span class="wb-inv"> / <span lang="fr">Gouvernement du Canada</span></span>
                    <meta property="name" content="Government of Canada">
                    <meta property="name" lang="fr" content="Gouvernement du Canada">
                    <meta property="areaServed" typeof="Country" content="Canada">
                </div>
            </div>
            <div class="row cdts-splash">
                <section class="col-xs-6 text-right" lang="en">
                    <%_ if (displayedValues.textLeft != null) { -%>
                        <h3><%= displayedValues.textLeft %></h3>
                    <%_ } else { -%>
                        <h2 class="wb-inv"><%= displayedValues.textLeftInv %></h2>
                    <%_ } -%>
                </section>
                <section class="col-xs-6" lang="fr">
                    <%_ if (displayedValues.textRight != null) { -%>
                        <h3><%= displayedValues.textRight %></h3>
                    <%_ } else { -%>
                        <h2 class="wb-inv"><%= displayedValues.textRightInv %></h2>
                    <%_ } -%>
                </section>
            </div>
            <div class="row text-center">
                <%_ var navlang = navigator.language; -%>
                <ul class="list-inline lst-spcd">
                    <li>
                        <%_ if (navlang == 'fr-CA') { -%>
                            <a href="<%- displayedValues.btnLinkLeft %>" class="btn btn-default" lang="en"><%= displayedValues.btnTextLeft %></a>
                        <%_ } else { -%>
                            <a href="<%- displayedValues.btnLinkLeft %>" class="btn btn-primary" lang="en"><%= displayedValues.btnTextLeft %></a>
                        <%_ } -%>
                    </li>
                    <li>
                        <%_ if (navlang == 'fr-CA') { -%>
                            <a href="<%- displayedValues.btnLinkRight %>" class="btn btn-primary" lang="fr"><%= displayedValues.btnTextRight %></a>
                        <%_ } else { -%>
                            <a href="<%- displayedValues.btnLinkRight %>" class="btn btn-default" lang="fr"><%= displayedValues.btnTextRight %></a>
                        <%_ } -%>
                    </li>
                </ul>
            </div>
        </div>
        <div class="sp-bx-bt col-xs-12">
            <div class="row">
                <div class="col-xs-7 col-md-8">
                    <a href="<%- displayedValues.termsLinkLeft %>" class="sp-lk"><%= displayedValues.termsTextLeft %></a> <span class="glyphicon glyphicon-asterisk"></span> <a href="<%- displayedValues.termsLinkRight %>" class="sp-lk" lang="fr"><%= displayedValues.termsTextRight %></a>
                </div>
                <div class="col-xs-5 col-md-4 text-right mrgn-bttm-md">
                    <img src="<%- wet.builder.environment(pr.cdnEnv) %>wet-boew/assets/wmms-spl.svg" width="127" alt="Symbol of the Government of Canada"><span class="wb-inv"> / <span lang="fr">Symbole du gouvernement du Canada</span></span>
                </div>
            </div>
        </div>
    </div>
</main>
